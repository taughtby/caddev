<h1>StudyGroups#show</h1>

<div>
	<h1><%= @study_group.subject.name %></h1> 
	<td><%= link_to "Back to study groups", study_groups_url %></td>
	<p>Taught by <%= link_to "#{@study_group.tutor.user.name}", tutor_url(@study_group.tutor) %></p> 
    <%="#{@study_group.student_limit-@study_group.students.count}" %> seats available	
	<td><%=link_to "Sign In to Register", sign_in_url%></td>
	
	<h3>Students </h3> 
	<% @tutor.students.each do |student| %>
		<p><li><%=student.name%> |</li></p>
	<%end%>
	
	<h3>Cost per hour</h3>
	$<%= @study_group.cost_per_hour%></p> 
  
  <h3>Syllabus</h3> 
  <p><%= @study_group.syllabus%></p> 
</div>

<h3>Posts</h3> 
	<div id="newpost"></div>
	  <%= link_to "New post", new_study_group_study_group_post_path(@study_group.id), :remote => true %>
	  <% @study_group.study_group_posts.each do |post| %>
	    <%= post.title%></p>
		  <% post.study_group_comments.each do |comment| %>
        <%= comment.user.name%> <%= comment.body%> | <%= comment.created_at%>
		  <%end%>
	</div>
	<div class="newcomment"></div>
		  <%= puts "Post = '#{post.id}'"%>
      <% @study_group_comment = post.study_group_comments.build %>
      <%= form_for [@study_group, post, @study_group_comment] do |t| %>
        <%= t.hidden_field :user_id, :value =>986 %>
  </div>
  <div class="field">
  	  <%= t.label :new_comment%><br />
  	  <%= t.text_field :body %>
	</div>
  <div class="actions">
  	  <%= t.submit %>
  </div>
      <%end%>
    <%end%>
		
		
		
		