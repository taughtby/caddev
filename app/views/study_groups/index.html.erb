<!-- Tabbable connent -->
<div class="tabbable tutor_profile_page"> 
  <ul class="nav nav-tabs">
    <li class="active"><a href="#tab1" data-toggle="tab"><i class="icon-user"></i>  Tutors</a></li>
    <li><a href="#tab2" data-toggle="tab"><i class="icon-folder-open"></i>  Classes</a></li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="tab1">
      <table class="table table-striped", id="study_groups_table">
	   <!-- you've broken the javascript study_groups.js - rem to fix -->
						

			  <tbody>
			    <% i = 10000 %>
			    <% @study_groups.each do |sg| %>
			      <tr>
			        <% if i == 0%>
				      <td><%= image_tag "/assets/miyagi_profile.jpg", :size => "85x85" %></td>
				        <!-- <img src="/images/miyagi_profile.jpg" alt="tutor profile pic"> -->
				        <td><%= link_to sg.tutor.user.name, tutor_url(sg.tutor) %></br>
  				          <%= "Santa Barbara, CA. 93132" %></br>
  				        <!--  <%= link_to "#{sg.subject.name}", study_group_url(sg) %></br> -->
  				      </td>
				        <% i = 1+1 %>
			        <% else %>
			        <td><%= image_tag "http://graph.facebook.com/#{Random.rand(10000)}/picture", :size => "85x85" %></td>
			        <td><%= link_to "#{sg.tutor.user.name}", tutor_url(sg.tutor) %></br>
				          <%= "#{sg.tutor.user.city}, #{sg.tutor.user.state}. #{sg.tutor.user.zip}" %></br>
				        <!--  <%= link_to "#{sg.subject.name}", study_group_url(sg) %></br> -->
				      </td>
			        <% end %>
			        
			       
			        
			        <td>
				          <%= "£#{sg.cost_per_hour} per hour" %></br>
				          <%= "#{Zipcode.distance(sg.tutor.user.zipcode, @search_zip ).to_i} km away" %></br>
				        
				          <% if session[:uid].present? %>
					        <%= link_to "button to register", new_study_group_registration_url(:study_group_id =>    sg.id) %></td>
					        <%else%>
					          <%= button_to "Sign In to Register", sign_in_url, :method => "get" %>
					          <!-- <%=link_to "Sign In to Register", sign_in_url%> -->
					        <% end %>
				
				      
			      </tr>
			    <% end %>
			  </tbody>
			</table>
    </div>
    <div class="tab-pane" id="tab2">
			<table class="table table-striped", id="study_groups_table">
	   <!-- you've broken the javascript study_groups.js - rem to fix -->
						

			  <tbody>
			    <% @study_groups.each do |sg| %>
			      <tr>
				      <td><%= image_tag "http://graph.facebook.com/#{Random.rand(10000)}/picture", :size => "85x85" %></td>
				        <!-- <img src="/images/miyagi_profile.jpg" alt="tutor profile pic"> -->
			        
			        <td class="class-title"><p class="title"><%= link_to "#{sg.subject.name} Lessons", study_group_url(sg) %></p>
			            <p>taughtby <%= link_to "#{sg.tutor.user.name}", tutor_url(sg.tutor) %></p>
				          <%= "#{sg.tutor.user.city}, #{sg.tutor.user.state}. #{sg.tutor.user.zip}" %></br>
				          
				      </td>
			       
			        
			        <td>
				          <%= "£#{sg.cost_per_hour} per hour" %></br>
				          <%= "#{Zipcode.distance(sg.tutor.user.zipcode, @search_zip ).to_i} km away" %></br>
				        
				          <% if session[:uid].present? %>
					        <%= link_to "button to register", new_study_group_registration_url(:study_group_id =>    sg.id) %></td>
					        <%else%>
					          <%= button_to "Sign In to Register", sign_in_url, :method => "get" %>
					          <!-- <%=link_to "Sign In to Register", sign_in_url%> -->
					        <% end %>
				
				      
			      </tr>
			    <% end %>
			  </tbody>
			</table>
      
    </div>
  </div>
</div>


