<header>
	<h1>Guitar Lessons for Beginners</h1>
	<p>taughtBy <%= @tutor.user.name %></p>

	
</header>

<div class="tutor_nav">
	<ul>
	  <li class="btn">Profile</li>
  	<li class="btn">Classes</li>
  	<li class="btn">Review</li>
  	<li class="btn">Community</li>
	</ul>
</div>





<div class="tabbable tabs-left">
  <ul class="nav nav-tabs">
    <li><a href="#lA" data-toggle="tab">Profile</a></li>
    <li><a href="#lB" data-toggle="tab">Classes</a></li>
    <li><a href="#lC" data-toggle="tab">Other</a></li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane" id="lA">
      <div class="profile">
      	<h3>Profile</h3>
      	<div class="contact">
      		<p class="btn">Contact Me!</p>
      		<p><%= render :partial => 'users/contact_info', :locals => {:user => @tutor.user} %></p>
      	</div>
      	<p><%= @tutor.tutor_welcome %></p>
      </div>
      <div class = "google_map" onload="google_map_initialize()">
        <div id="map_canvas"></div>
      </div>
     </div>
     <div class="tab-pane" id="lB">
       <p>I'm in Section B.</p>
      </div>
      <div class="tab-pane" id="lC">
        <p>I'm in Section B.</p>
       </div>
  </div>
</div>



<div class="student-list">
	<h3>Students</h3>
	<ul>
	<% @tutor.students.each do |student| %>

		<li><%=student.name%></li>
	<%end%>

	</ul>
</div>

<p class ="btn">Facebook</p>

<div class = "faq">
  <h3>Questions & Answers</h3>
  <ul>
  	<% @tutor.faqs.each do |faq|%>
  		<li>Q: <%= faq.question%></li>
  		<li>A: <%= faq.answer%></li>

  	<%end%>
  </ul>
</div>

<div class ="reviews">
  <h3>Reviews</h3>
  <ul>
  	<% @tutor.tutor_reviews.each do |review| %>
  		<li><%= review.review_text %></li>		
  		<li>Posted by <%= review.student.user.name %></li>		
  		<li><%= review.created_at %></li>		

  	<%end%>
  </ul>
</div>